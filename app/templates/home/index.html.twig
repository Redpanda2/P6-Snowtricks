{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    {% set lastTrick = '' %}
    <section class="hero">
    </section>
    <section class="container my-5">
        <div class="row g-4 d-sm-flex">
            {% for index,trick in tricks %}
                <div class="col-12 col-md-6 col-lg-3 pt-5">
                    {% set lastTrick = index %}
                    {% include "trick/_trick_card.html.twig" %}
                </div>
            {% endfor %}
        </div>
        <div id="tricks" class="row g-4 d-sm-flex">
            {% for index,trick in loadedTricks %}
                <div class="col-12 col-md-6 col-lg-3 pt-5">
                    {% set lastTrick = index %}
                    {% include "trick/_trick_card.html.twig" %}
                </div>
            {% endfor %}
        </div>

        <div class="my-5 d-flex justify-content-center align-items-center">
            <a href="{{ path('homepage', {offset: lastTrick}) }}" id="js-loadMore_tricks" data-lastTrick="{{ lastTrick }}" class="btn btn-primary"><i class="fa fa-spinner"></i> Charger Plus</a>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('removeTrick') }}
    {{ encore_entry_script_tags('loadmore') }}
{% endblock %}
